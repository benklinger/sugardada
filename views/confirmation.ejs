<!-- views/confirmation.ejs -->
<!DOCTYPE html>
<html lang="en" data-theme="dark">
<head>
  <meta charset="UTF-8" />
  <title>Confirmation: Sugar Dada</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no" />
  <link rel="stylesheet" href="/styles.css" />
</head>
<body>
  <!-- Include Header Partial -->
  <%- include('partials/header') %>

  <div class="wrapper">
    <div class="question">Thank you for completing the onboarding!</div>

    <% if (gender && name && dobMonth && dobDay && dobYear && monthly) { %>
      <p><strong>Gender:</strong> <%= gender %></p>
      <p><strong>Name:</strong> <%= name %></p>
      <p><strong>Date of Birth:</strong> <%= dobMonth %> <%= dobDay %>, <%= dobYear %></p>
      <p><strong>Monthly Investment:</strong> <%= monthly %></p>
    <% } else { %>
      <p>No data available. Please start over.</p>
    <% } %>

    <!-- Optionally, provide a link to restart or go home -->
    <div style="margin-top: 1rem;">
      <a href="/">Go Home</a>
    </div>
  </div>

  <!-- Include Footer Partial -->
  <%- include('partials/footer') %>
</body>
</html>