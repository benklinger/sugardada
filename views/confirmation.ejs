<!-- views/confirmation.ejs -->
<!DOCTYPE html>
<html lang="en" data-theme="dark">
<head>
  <meta charset="UTF-8" />
  <title>Your Plan: Sugar Dada</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" integrity="sha512-pvvYb9HfBc+1JHnY7u7YX5XpYFSUsvXuTJXNjRC7UY1nhz5wOPmZjwCqfGKyBs8CvIlrVhF5IVlYhOZoR4qkpg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
  <link rel="stylesheet" href="/styles.css" />
</head>
<body data-monthly-investment="<%= investment %>">
  <%- include('partials/header') %>

  <div class="wrapper">
    <div class="cards-container">
      <div class="card card-clickable">
        <div class="card-inner">
          <div class="card-title"><%= riskLevel %> Risk</div>
          <div class="card-value"><%= investmentTicker %></div>
		  <div class="card-hint">Tap to change, double-tap insane</div>
        </div>
      </div>

      <div class="card card-clickable">
        <div class="card-inner">
          <div class="card-title">Monthly Investment</div>
          <div class="card-value">$<%= Math.round(investment).toLocaleString() %></div>
		  <div class="card-hint">Tap to add $50, double-tap to undo</div>
        </div>
      </div>

      <div class="card">
        <div class="card-inner">
          <div class="card-title">Est. Value</div>
          <div class="card-value" id="est-value">$999,999</div>
        </div>
      </div>

      <div class="card">
        <div class="card-inner">
          <div class="card-title">Est. Return</div>
          <div class="card-value" id="est-return">
            <span id="roi-multiple">x9.9</span>
            <div class="card-hint hint-visible" id="roi-hint">$999,999</div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <%- include('partials/footer') %>

  <script src="/js/confirmation.js"></script>
</body>
</html>