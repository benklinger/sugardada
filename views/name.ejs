<!-- views/name.ejs -->
<!DOCTYPE html>
<html lang="en" data-theme="dark">
<head>
  <meta charset="UTF-8">
  <title>Onboarding: Sugar Dada</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no" />
</head>
<body>
  <%- include('partials/header') %>

  <div class="wrapper">
    <div class="question"></div>

    <% if (errors.length > 0) { %>
      <ul class="error">
        <% errors.forEach(error => { %>
          <li><%= error.msg %></li>
        <% }) %>
      </ul>
    <% } %>

    <!-- If you want to dynamically show 'boy'/'girl' in the question, you can also do it in data-question. -->
    <!-- Or you can rely on data-gender and handle it in JS. We'll show both approaches in the JS. -->
    <form action="/onboarding/2"
          method="POST"
          class="form"
          data-gender="<%= gender %>">
      <textarea name="babyName" rows="1" required><%= oldInput.babyName ? oldInput.babyName : '' %></textarea>
      <div class="hint">Press Return to continue</div>
    </form>
  </div>

  <%- include('partials/footer') %>
</body>
</html>