<!-- views/dob.ejs -->
<!DOCTYPE html>
<html lang="en" data-theme="dark">
<head>
  <meta charset="UTF-8">
  <title>Onboarding: Sugar Dada</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no" />
</head>
<body>
  <%- include('partials/header') %>

  <div class="wrapper">
    <div class="question"></div>

    <% if (errors.length > 0) { %>
      <ul class="error">
        <% errors.forEach(error => { %>
          <li><%= error.msg %></li>
        <% }) %>
      </ul>
    <% } %>

    <!-- data-name for dynamic question: "When was {name} born?" -->
    <form action="/onboarding/3" method="POST" class="form" data-name="<%= name %>">
      <div class="dob-wrapper">
        <select name="dobMonth" required>
          <option value="" disabled selected>Month</option>
          <option value="Jan">Jan</option>
          <option value="Feb">Feb</option>
          <option value="Mar">Mar</option>
          <option value="Apr">Apr</option>
          <option value="May">May</option>
          <option value="Jun">Jun</option>
          <option value="Jul">Jul</option>
          <option value="Aug">Aug</option>
          <option value="Sep">Sep</option>
          <option value="Oct">Oct</option>
          <option value="Nov">Nov</option>
          <option value="Dec">Dec</option>
        </select>

        <select name="dobDay" required>
          <option value="" disabled selected>Day</option>
          <% for(let day = 1; day <= 31; day++) { %>
            <option value="<%= day %>"><%= day %></option>
          <% } %>
        </select>

        <select name="dobYear" required>
          <option value="" disabled selected>Year</option>
          <option value="2023">2023</option>
          <option value="2024">2024</option>
          <option value="2025">2025</option>
        </select>
      </div>
    </form>
  </div>

  <%- include('partials/footer') %>
</body>
</html>