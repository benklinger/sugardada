<!-- views/confirmation.ejs -->
<!DOCTYPE html>
<html lang="en" data-theme="dark">
<head>
  <meta charset="UTF-8" />
  <title>Your Plan: Sugar Dada</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" integrity="sha512-pvvYb9HfBc+1JHnY7u7YX5XpYFSUsvXuTJXNjRC7UY1nhz5wOPmZjwCqfGKyBs8CvIlrVhF5IVlYhOZoR4qkpg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
  <link rel="stylesheet" href="/styles.css" />
</head>
<body>
  <%- include('partials/header') %>

  <div class="wrapper">
    <!-- Existing Cards -->
    <div class="cards-container">
      <div class="card">
        <div class="card-inner">
          <div class="card-title"><%= riskLevel %> Risk</div>
          <div class="card-value"><%= investmentTicker %></div>
        </div>
      </div>

      <div class="card">
        <div class="card-inner">
          <div class="card-title">Monthly Investment</div>
          <div class="card-value">$ <%= investment.toLocaleString() %></div>
        </div>
      </div>

      <div class="card">
        <div class="card-inner">
          <div class="card-title">Total Value</div>
          <div class="card-value">TBD</div>
        </div>
      </div>

      <div class="card">
        <div class="card-inner">
          <div class="card-title">Interest Earned</div>
          <div class="card-value">TBD</div>
        </div>
      </div>
    </div>

    <!-- Investment Records Table -->
    <% if (investmentRecords && investmentRecords.length > 0) { %>
      <table border="1" cellspacing="0" cellpadding="8">
        <thead>
          <tr>
            <th>Simulated Date</th>
            <th>Historical Date</th>
            <th>Total Investment ($)</th>
            <th>Share Price ($)</th>
            <th>Shares Purchased</th>
            <th>Total Value ($)</th>
            <th>Interest ($)</th>
          </tr>
        </thead>
        <tbody>
          <% investmentRecords.forEach(record => { %>
            <tr>
              <td><%= record.simulatedDate.toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' }) %></td>
              <td><%= record.historicalDate.toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' }) %></td>
              <td>$<%= record.totalInvestment.toLocaleString('en-US', { minimumFractionDigits: 2, maximumFractionDigits: 2 }) %></td>
              <td>$<%= record.sharePrice.toLocaleString('en-US', { minimumFractionDigits: 2, maximumFractionDigits: 2 }) %></td>
              <td><%= record.sharesPurchased.toFixed(4) %></td>
              <td>$<%= record.totalValue.toLocaleString('en-US', { minimumFractionDigits: 2, maximumFractionDigits: 2 }) %></td>
              <td>$<%= record.interest.toLocaleString('en-US', { minimumFractionDigits: 2, maximumFractionDigits: 2 }) %></td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    <% } else { %>
      <p>No investment records to display.</p>
    <% } %>
  </div>

  <%- include('partials/footer') %>

  <!-- Include External JavaScript File -->
  <script src="/js/confirmation.js"></script>
</body>
</html>