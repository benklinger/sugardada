<!DOCTYPE html>
<html lang="en" data-theme="dark">
<head>
  <meta charset="UTF-8" />
  <title>Your Plan: Sugar Dada</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" integrity="sha512-pvvYb9HfBc+1JHnY7u7YX5XpYFSUsvXuTJXNjRC7UY1nhz5wOPmZjwCqfGKyBs8CvIlrVhF5IVlYhOZoR4qkpg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
  <link rel="stylesheet" href="/styles.css" />
</head>
<body>
  <%- include('partials/header') %>

  <div class="wrapper">
    <div class="cards-container">
      <div class="card">
        <div class="card-inner">
          <div class="card-title"><%= riskLevel %> Risk</div>
          <div class="card-value"><%= investmentTicker %></div>
        </div>
      </div>

      <div class="card">
        <div class="card-inner">
          <div class="card-title">Monthly Investment</div>
          <div class="card-value">$ <%= monthly.toLocaleString() %></div>
        </div>
      </div>

      <div class="card">
        <div class="card-inner">
          <div class="card-title">Total Value</div>
          <div class="card-value">TBD</div>
        </div>
      </div>

      <div class="card">
        <div class="card-inner">
          <div class="card-title">Interest Earned</div>
          <div class="card-value">TBD</div>
        </div>
      </div>
    </div>
  </div>

  <%- include('partials/footer') %>

  <script>
    document.addEventListener('DOMContentLoaded', () => {
      const cards = document.querySelectorAll('.card');
      cards.forEach((card, index) => {
        setTimeout(() => {
          card.classList.add('card-enter');
        }, index * 100);
      });
    });
  </script>
</body>
</html>