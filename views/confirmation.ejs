<!-- views/confirmation.ejs -->
<!DOCTYPE html>
<html lang="en" data-theme="dark">
<head>
  <meta charset="UTF-8" />
  <title>Confirmation: Sugar Dada</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no" />
  <link rel="stylesheet" href="/styles.css" />
</head>
<body>
  <%- include('partials/header') %>

  <div class="wrapper">
    <div class="question">Thank you for completing the onboarding!</div>

    <% if (gender && name && dobMonth && dobDay && dobYear && monthly && riskLevel && investmentTicker && hasIBAccount) { %>
      <p><strong>Gender:</strong> <%= gender %></p>
      <p><strong>Name:</strong> <%= name %></p>
      <p><strong>Date of Birth:</strong> <%= dobMonth %> <%= dobDay %>, <%= dobYear %></p>
      <p><strong>Monthly Investment:</strong> $ <%= monthly.toLocaleString() %></p>
      <p><strong>Risk Level:</strong> <%= riskLevel %></p>
      <p><strong>Investment Ticker:</strong> <%= investmentTicker %></p>
      <p><strong>Interactive Brokers Account:</strong> <%= hasIBAccount %></p>
    <% } else { %>
      <p>No data available. Please start over.</p>
    <% } %>

    <div style="margin-top: 1rem;">
      <a href="/">Go Home</a>
    </div>
  </div>

  <%- include('partials/footer') %>
</body>
</html>