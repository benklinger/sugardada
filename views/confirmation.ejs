<!-- views/confirmation.ejs -->
<!DOCTYPE html>
<html lang="en" data-theme="dark">
<head>
  <meta charset="UTF-8" />
  <title>Confirmation: Sugar Dada</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no" />
  <link rel="stylesheet" href="/styles.css" />
</head>
<body>
  <!-- Include your header partial -->
  <%- include('partials/header') %>

  <div class="wrapper">
    <!-- Confirmation Header -->
    <h2>Confirmation</h2>

    <!-- Display Entered Information -->
    <% if (gender && name) { %>
      <p><strong>Gender:</strong> <%= gender %></p>
      <p><strong>Name:</strong> <%= name %></p>
      <!-- If DOB is provided, display it -->
      <% if (dobMonth && dobDay && dobYear) { %>
        <p><strong>Date of Birth:</strong> <%= dobMonth %> <%= dobDay %>, <%= dobYear %></p>
      <% } %>
    <% } else { %>
      <p>No data available. Please start over.</p>
    <% } %>

    <!-- Optionally, link to restart the onboarding flow or go home -->
    <div style="margin-top: 1rem;">
      <a href="/">Go Home</a>
    </div>
  </div>

  <!-- Include your footer partial -->
  <%- include('partials/footer') %>
</body>
</html>